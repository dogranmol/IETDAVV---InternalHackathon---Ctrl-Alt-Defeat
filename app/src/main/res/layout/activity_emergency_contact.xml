<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".EmergencyContactActivity">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="133dp"
        android:layout_height="122dp"
        android:layout_marginLeft="120dp"
        android:layout_marginTop="80dp"
        app:srcCompat="@android:drawable/stat_sys_phone_call_forward" />

    <EditText
        android:id="@+id/edit_text_num_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="40dp"
        android:layout_marginRight="50dp"
        android:ems="10"
        android:hint="Number 1"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/edit_text_num_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="50dp"
        android:ems="10"
        android:hint="Number 2"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/edit_text_num_3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="50dp"
        android:ems="10"
        android:hint="Number 3"
        android:inputType="textPersonName" />

    <Button
        android:id="@+id/button_save"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="100dp"
        android:text="save" />

</LinearLayout>